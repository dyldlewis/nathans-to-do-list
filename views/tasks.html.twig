<html>
<head>
    <title>To Do List</title>
</head>
<body>
  <div class='container'>
        <h1>To Don't List</h1>

        {% if tasks is not empty %}
            <p>Here are all your tasks:</p>
            <ul>
                {% for task in tasks %}
                <li><a href="/tasks/{{ task.getId }}">{{ task.getDescription }}</a></li>
            {% endfor %}
            </ul>
        {% endif %}

        <form action='/tasks' method='post'>
            <label for='description'>Task Description</label>
            <input id='description' name='description' type='text'>
            <label for='due_date'>Task Due Date</label>
           <input id='due_date' name='due_date' type='text'>

            <button type='submit' class='btn-success'>Add task</button>
        </form>
        <form action='/delete_tasks' method='post'>
            <button type='submit' class='btn-info'>Clear</button>
        </form>

        <p><a href='/'>Home</a></p>
    </div>
</body>
</html>
